= render 'shared/header'

%div{:class => "profile_page"}
    %div{:class => "profile_image"}
        = image_tag(current_user.avatar.url(:medium), :class => "profile_image")
    
    %div{:class => "about_me"}
        %p{:class => "prof_user"}= @viewed_user.username 
        %b{:class => "loc_label"} Location: 
        %br
        %p 
            %b{:class => "prof_label"} Info
            - if @owned
                %div{:class => "edit_input_wrap"}
                    %p= best_in_place @viewed_profile, :info, :as => :textarea, :ok_button => 'Save', :cancel_button => 'Cancel', :url => profile_path
            - else
                %div{:class => "input_wrap"}
                    %p= @info
        %p 
            %b{:class => "prof_label"} What Motivates Me...
            - if @owned
                %div{:class => "edit_input_wrap"}
                    %p= best_in_place @viewed_profile, :motivations, :as => :textarea, :ok_button => 'Save', :cancel_button => 'Cancel', :url => profile_path
            - else
                %div{:class => "input_wrap"}
                    %p= @motivations
        %p 
            %b{:class => "prof_label"} My Top Community Priorities...
            - if @owned
                %div{:class => "edit_input_wrap"}
                    %p= best_in_place @viewed_profile, :priorities, :as => :textarea, :ok_button => 'Save', :cancel_button => 'Cancel', :url => profile_path
            - else    
                %div{:class => "input_wrap"}
                    %p= @priorities
        %br
        %br
