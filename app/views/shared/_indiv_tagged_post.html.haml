%div{:class => "tag_post" }
    %div{:class => "content" }
        %p= post.content
    %div{:class => "user" }
        = User.find(post.user_id).username
    %div{:class => "filters" }
        Category:
        = link_to "#{post.category}", tagged_posts_path(:sort_category => post.category), :class => "tag_sort"
    %div{:class => "filters" }
        Sustainable UN Goal: 
        = link_to "#{post.tag}", tagged_posts_path(:sort_tag => post.tag), :class => "tag_sort"
    %div{:class => "timestamp" }
        Posted on
        = post.created_at.strftime("%m/%d/%Y at %l:%M%p")
    //%div{:class => "social-share-button-facebook"}
    //    = social_share_button_tag("My Post")
    =form_tag do 
        =link_to "#{post.taggedcomments.count} Comments", tagged_post_taggedcomments_path(post)
        =toggle_like_tag_button(post,current_user)
        =post.likes.count
%br